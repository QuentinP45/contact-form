{% extends '@CompanyAdmin/layout.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="col-sm-offset-4 col-sm-4" style="background-color:#ed9109;padding-top:30px;padding-bottom:30px;">
        <div class="form-group">
            <label for="usr">Nom</label>
            <input type="text" class="form-control" value="{{ message.name }}" id="usr" readonly>
        </div>
        <div class="form-group">
            <label for="mail">Mail</label>
            <input type="email" class="form-control" value="{{ message.mail }}" id="mail" readonly>
        </div>
        <div class="form-group">
            <label for="comment">Message</label>
            <textarea class="form-control" rows="5" id="comment" readonly>{{ message.content }}</textarea>
        </div> 
        <div class="form-group">
            <label for="date">Date</label>
            <input class="form-control" size="16" type="text" value="{{ message.datecreation|date('d/m/Y') }}" readonly class="form_datetime">
        </div> 

        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_label(form.checked) }}
        {{ form_errors(form.checked) }}
        {{ form_widget(form.checked) }}
        {{ form_end(form) }}
    </div>    
{% endblock %}