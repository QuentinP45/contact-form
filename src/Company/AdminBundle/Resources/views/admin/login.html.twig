{% extends 'base.html.twig' %}

{% block title %}
    Login
{% endblock %}

{% block userbar %}
{% endblock %}

{% block catchphrase %}
    Seul l'admin peut se connecter
{% endblock %}

{% block body %}
    <div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
        {% if error %}
            {% if error.messageKey is defined %}
            <div>Identification non valide</div>
            {% endif %}
        {% endif %}

        <form action="{{ path('login_check') }}" method="post">
            <div class="form-group">
                <label for="username">Identifiant</label>
                <input type="text" class="form-control" id="username" name="_username" placeholder="admin">
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="kitten"/>
            </div>
            <button type="submit" class="btn btn-default">Valider</button>
        </form>
    </div>
{% endblock %}